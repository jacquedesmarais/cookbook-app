<h1>Edit a recipe</h1>

<%= form_tag "/recipes/#{@recipe.id}", method: :patch do %>
  <div>
    Title: <input type="text" name="title" value="<%= @recipe.title %>">
  </div>
  <div>
    Chef: <input type="text" name="chef" value="<%= @recipe.chef %>">
  </div>  
  <div>
    Ingredients: <input type="text" name="ingredients" value="<%= @recipe.ingredients %>">
  </div>  
  <div>
    Directions: <input type="text" name="directions" value="<%= @recipe.directions %>" >
  </div>
  <input class= "btn btn-success" type="submit" value="Update Recipe">
<% end %>